<div class="container px-5 px-sm-0">
  <div class="row justify-content-md-center">
    <h2>プロフィール登録画面</h2>
  </div><br />
    <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_with model: @user, url: public_user_path ,method: :patch, local:true do |f| %>
    <div class="row justify-content-md-center">
      <div class="form-group col-md-3">
        <h4><%= f.label :nickname, "ニックネーム" %></h4>
        <%= f.text_field :nickname, class:"form-control", placeholder:"(例)はんぺん" %><br/>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="form-group">
        <h4><%= f.label :profile, "自己紹介" %></h4>
         <%= f.text_area :profile, rows:'5',cols:'80',placeholder: "(例)アクセサリー中心で投稿してます。宜しくお願い致します！" %><br />
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="form-group">
        <h4><%= f.label :avatar, "アバター画像" %></h4><br/>
            <%= f.file_field :avatar %>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="form-group col-md-2">
        <%= f.submit '登録', class:"btn btn-lg btn-block btn-primary mt-3" %>
      </div>
    </div>
  <% end %>
</div>