    <div class="row card offset-1">
     <div class="card-body">
       <h5 class="card-title"><%=post_item.name %></h5>
       <%= link_to  public_post_item_path(post_item) do %>
       <p class="card-image"><%= image_tag post_item.images[0] ,width:200, height:200 %></p>
       <% end %>
       <ここにいいね&ファボをつける>
        <div><br />
        <%= link_to  public_user_path(post_item.user) do %>
          <% if post_item.user.avatar.attached? %>
          <%= image_tag post_item.user.avatar.variant(resize:'100x100').processed %>
          <% else %>
          <%= image_tag ("no_image.png"), size: '100x100'  %>
          <% end %>
        <% end %>
       </div>
      </div>
     </div>


<%= @genres.each do |genre| %>
<%=link to genre.name, public_genres_path(genre_id: genre.id) %>
<% end %>
