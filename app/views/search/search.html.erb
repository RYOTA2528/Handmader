<% if @results.empty? %>
  <h2>該当作品の投稿はまだありません</h2>
    <div class="text-center">
      <%= image_tag ("no_post_items.png"), size: '300x300'%>
    </div>
<% end %>
 <div class="container px-5 px-sm-0">
   <div class="row justify-content-md-center">
     <h3 class="title text-center"><%= @result.name%></h3>
   </div>
   <div class="row">
     <% @results.each do |result| %>
    <div class="row card offset-1">
     <div class="card-body">
       <h5 class="card-title"><%=result.name %></h5>
       <%= link_to  public_post_item_path(result) do %>
       <p class="card-image"><%= image_tag result.images[0] ,width:200, height:200 %></p>
       <% end %>
       <ここにいいね&ファボをつける>
        <div><br />
        <%= link_to  public_user_path(post_item.user) do %>
          <% if result.user.avatar.attached? %>
          <%= image_tag result.user.avatar.variant(resize:'100x100').processed %>
          <% else %>
          <%= image_tag ("no_image.png"), size: '100x100'  %>
          <% end %>
        <% end %>
       </div>
      </div>
     </div>
     <% end %>
   </div>
 </div>
